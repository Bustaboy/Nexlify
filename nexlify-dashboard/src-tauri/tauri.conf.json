{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nexlify-dashboard",
  "version": "0.1.0",
  "identifier": "Nexlify",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "nexlify-dashboard",
        "width": 1600,
        "height": 1000,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false,
        "theme": "Dark",
        "titleBarStyle": "Overlay",
        "hiddenTitle": false,
        "acceptFirstMouse": false,
        "tabbingIdentifier": "nexlify",
        "additionalBrowserArgs": null
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost ws://localhost:* wss://localhost:*",
        "font-src": "'self' data:",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self'"
      },
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**"],
          "deny": []
        }
      },
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Â© 2025 NEXLIFY",
    "category": "Finance",
    "shortDescription": "NEXLIFY Trading Dashboard",
    "longDescription": "Real-time performance monitoring for NEXLIFY",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": null,
      "entitlements": null,
      "hardenedRuntime": true
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "allowDowngrades": true,
      "nsis": null
    }
  },
  "plugins": {}
}